{
  "show_edit_predictions": false,
  "agent": {
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },

  "vim_mode": true,
  "vim": { "use_system_clipboard": "never" },
  "vertical_scroll_margin": 999,
  "relative_line_numbers": true,
  "cursor_blink": false,
  "soft_wrap": "editor_width",

  "ui_font_size": 14,
  "buffer_font_size": 12,
  "ui_font_family": "JetBrains Mono",

  "theme": {
    "mode": "system",
    "light": "Base16 Grayscale Dark",
    "dark": "One Dark"
  },

  "telemetry": { "diagnostics": false, "metrics": false },

  "languages": {
    "GDScript": {
      "tab_size": 8,
      "hard_tabs": true
    }
  },

  "tab_bar": { "show": false, "show_nav_history_buttons": false },
  "toolbar": { "breadcrumbs": false, "quick_actions": false },
  "indent_guides": { "enabled": false },
  "git": { "git_gutter": "hide", "inline_blame": { "enabled": false } },
  "features": { "edit_prediction_provider": "none" }, // disable ai completion
  // "disable_ai": true,
  "diagnostics_max_severity": "off",

  "gutter": {
    "line_numbers": false,
    "folds": false,
    "breakpoints": false,
    "runnables": false,
    "min_line_number_digits": 0
  },
  // "current_line_highlight": "none",
  "scrollbar": {
    "show": "never",
    "cursors": false,
    "git_diff": false,
    "diagnostics": "none",
    "search_results": false,
    "selected_symbol": false
  },

  "profiles": {
    "no_bullshit": {
      "tab_bar": { "show": false, "show_nav_history_buttons": false },
      "toolbar": { "breadcrumbs": false, "quick_actions": false },
      "indent_guides": { "enabled": false },
      "git": { "git_gutter": "hide", "inline_blame": { "enabled": false } },
      "features": { "edit_prediction_provider": "none" }, // disable ai completion
      // "disable_ai": true,
      "diagnostics_max_severity": "off",

      "gutter": {
        "line_numbers": false,
        "folds": false,
        "breakpoints": false,
        "runnables": false,
        "min_line_number_digits": 0
      },
      // "current_line_highlight": "none",
      "scrollbar": {
        "show": "never",
        "cursors": false,
        "git_diff": false,
        "diagnostics": "none",
        "search_results": false,
        "selected_symbol": false
      }
    }
  }
}
